@model VisitorUserUpdateViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Visitor/Views/VisitorLayout/Index.cshtml";
}
<div class="row">
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Profil Bilgileri Sayfası</h4>
                <form class="forms-sample" method="post" enctype="multipart/form-data">
                    <div class="form-group">
                        <label for="exampleInputName1">Adınız</label>
                        <input type="text" asp-for="Name" class="form-control" id="exampleInputName1">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputName1">Soyadınız</label>
                        <input type="text" asp-for="Surname" class="form-control" id="exampleInputName1">
                    </div>
                    <div class="form-group">
                        <label>Resim Seç </label>
                        <span>(Mevcut Resim Url => @Model.PictureUrl)</span>
                        <br />
                        <input type="file" asp-for="Picture" />
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword4">Şifreniz</label>
                        <input type="password" class="form-control" id="exampleInputPassword4">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword4">Şifre Tekrar</label>
                        <input type="password" class="form-control" id="exampleInputPassword4">
                    </div>
                    <button type="submit" class="btn btn-outline-primary mr-2">Güncelle</button>
                    <button class="btn btn-outline-danger">İptal</button>
                </form>
            </div>
        </div>
    </div>
</div>
