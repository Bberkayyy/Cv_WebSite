@model ResultVisitorMessageDto
@{
    ViewData["Title"] = "ReceiverMessageDetails";
    Layout = "~/Areas/Visitor/Views/VisitorLayout/Index.cshtml";
}
<div class="row">
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Mesaj Detayları</h4>
                <form class="forms-sample" asp-action="ReceiverMessageDetails">
                    <input type="hidden" asp-for="Id" />
                    <div class="form-group">
                        <label for="exampleInputUsername1">Alıcı Adı</label>
                        <input type="text" class="form-control" asp-for="ReceiverName" disabled id="exampleInputUsername1">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Alıcı Mail</label>
                        <input type="text" class="form-control" asp-for="ReceiverMail" disabled id="exampleInputEmail1">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">Mesaj</label>
                        <textarea rows="6" class="form-control" asp-for="MessageContent" disabled id="exampleInputPassword1"></textarea>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>