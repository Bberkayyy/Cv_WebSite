@model CreateNewMessageDto
@{
    ViewData["Title"] = "NewMessage";
    Layout = "~/Areas/Visitor/Views/VisitorLayout/Index.cshtml";
}

<div class="row">
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Yeni Mesaj</h4>
                <form class="forms-sample" method="post">
                    <div class="form-group">
                        <label for="exampleInputReceiverMail">Alıcı Mail</label>
                        <input type="text" class="form-control" asp-for="ReceiverMail" id="exampleInputReceiverMail">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputSubject">Konu</label>
                        <input type="text" class="form-control" asp-for="Subject" id="exampleInputSubject">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputMessageContent">Mesaj</label>
                        <textarea rows="6" class="form-control" asp-for="MessageContent" id="exampleInputMessageContent"></textarea>
                    </div>
                    <button class="btn btn-outline-primary">Gönder</button>
                </form>
            </div>
        </div>
    </div>
</div>

