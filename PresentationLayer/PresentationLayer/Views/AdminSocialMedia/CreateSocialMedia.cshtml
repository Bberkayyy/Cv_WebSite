@model CreateSocialMediaDto
@{
    ViewData["Title"] = "CreateSocialMedia";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
<div class="col-xl-8 order-xl-1">
    <div class="card">
        <div class="card-header">
            <div class="row align-items-center">
                <div class="col-12">
                    <h3 class="mb-0">Sosyal Medya Hesabı Ekleme Sayfası </h3>
                </div>
            </div>
        </div>
        <div class="card-body">
            <form method="post">
                <div class="pl-lg-4">
                    <div class="row">
                        <div class="col-xl-12">
                            <div class="form-group">
                                <label class="form-control-label" for="input-Name">Sosyal Medya Adı</label>
                                <input class="form-control" type="text" id="input-Name" asp-for="Name" placeholder="Sosyal medya adı giriniz.">
                            </div>
                            <div class="form-group">
                                <label class="form-control-label" for="input-Url">Hesap Linki</label>
                                <input class="form-control" type="text" id="input-Url" asp-for="Url" placeholder="Hesap linki giriniz.">
                            </div>
                            <div class="form-group">
                                <label class="form-control-label" for="input-IconUrl">Icon Url</label>
                                <input class="form-control" type="text" id="input-IconUrl" asp-for="IconUrl" placeholder="Icon linki giriniz.">
                            </div>
                        </div>
                    </div>
                </div>
                <a href="/AdminSocialMedia/Index/" class="btn btn-secondary mt-2">Geri Dön</a>
                <button class="btn btn-primary mt-2" type="submit">Kaydet</button>
            </form>
        </div>
    </div>
</div>
