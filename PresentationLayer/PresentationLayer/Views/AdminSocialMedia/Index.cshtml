@model List<ResultSocialMediaDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}
@if (Model.Count() > 0)
{
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Sosyal Medya Hesapları Tablosu</h4>
                    <div class="table-responsive">
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th scope="col" class="sort" data-sort="name">Sosyal Medya Adı</th>
                                    <th scope="col" class="sort" data-sort="status">Linki</th>
                                    <th scope="col">Sil</th>
                                    <th scope="col" class="sort" data-sort="completion">Güncelle</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    count++;
                                    <tr>
                                        <td>@count</td>
                                        <td>@item.Name</td>
                                        <td>@item.Url</td>
                                        <td><a href="/AdminSocialMedia/RemoveSocialMedia/@item.Id" class="btn btn-outline-danger">Sil</a></td>
                                        <td><a href="/AdminSocialMedia/UpdateSocialMedia/@item.Id" class="btn btn-outline-info">Güncelle</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <a href="/AdminSocialMedia/CreateSocialMedia" class="btn btn-outline-primary">Yeni Sosyal Medya Ekle</a>
}
else
{
    <p class="bg-danger text-white p-4 text-center card-body table-responsive">Sosyal Medya bilgisi bulunamadı. Sosyal Medya eklemek için "Yeni Sosyal Medya Ekle" butonuna tıklayınız.</p>
    <a href="/AdminSocialMedia/CreateSocialMedia" class="btn btn-outline-primary">Yeni Sosyal Medya Ekle</a>
}