@model CreateSkillDto
@{
    ViewData["Title"] = "CreateSkill";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
<div class="col-xl-8 order-xl-1">
    <div class="card">
        <div class="card-header">
            <div class="row align-items-center">
                <div class="col-12">
                    <h3 class="mb-0">Yeni Yetenek Ekleme Sayfası </h3>
                </div>
            </div>
        </div>
        <div class="card-body">
            <form method="post">
                <div class="pl-lg-4">
                    <div class="row">
                        <div class="col-xl-12">
                            <div class="form-group">
                                <label class="form-control-label" for="input-Title">Title</label>
                                <input class="form-control" type="text" id="input-Title" asp-for="Title" placeholder="Yetenek giriniz.">
                            </div>
                            <div class="form-group">
                                <label class="form-control-label" for="input-Value">Value</label>
                                <input class="form-control" type="text" id="input-Value" asp-for="Value" placeholder="Değer giriniz.">
                            </div>
                        </div>
                    </div>
                </div>
                <button class="btn btn-primary mt-2" type="submit">Kaydet</button>
            </form>
        </div>
    </div>
</div>