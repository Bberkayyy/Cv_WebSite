@model List<ResultUsersDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
@if (Model.Count() > 0)
{
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Kullanıcılar Tablosu</h4>
                    <div class="table-responsive">
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th scope="col" class="sort" data-sort="budget">Adı Soyadı</th>
                                    <th scope="col" class="sort" data-sort="status">Kullanıcı Adı</th>
                                    <th scope="col" class="sort" data-sort="status">Email Adresi</th>
                                    <th scope="col" class="sort" data-sort="status">Mevcut Roller</th>
                                    <th scope="col">Sil</th>
                                    <th scope="col" class="sort" data-sort="completion">Rol Ata</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            <img src="/images/@item.ImageUrl" alt="image" />
                                            <span class="pl-2">@item.Name @item.Surname</span>
                                        </td>
                                        <td class="budget">@item.UserName</td>
                                        <td class="budget">@item.Email</td>
                                        <td user-name="@item.UserName" user-role="" class="budget"></td>
                                        <td><a href="/AdminUsers/RemoveUser/@item.Id" class="btn btn-outline-danger">Sil</a></td>
                                        <td><a href="/AdminUsers/UpdateRole/@item.Id" class="btn btn-outline-info">Rol Ata</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <a href="/AdminUsers/CreateUser" class="btn btn-outline-primary">Yeni Kullanıcı Ekle</a>
}
else
{
    <p class="bg-danger text-white p-4 text-center card-body table-responsive">Kullanıcı bilgisi bulunamadı. Yeni kullanıcı eklemek için "Yeni Kullanıcı Ekle" butonuna tıklayınız.</p>
    <a href="/AdminUsers/CreateUser" class="btn btn-outline-primary">Yeni Kullanıcı Ekle</a>
}

