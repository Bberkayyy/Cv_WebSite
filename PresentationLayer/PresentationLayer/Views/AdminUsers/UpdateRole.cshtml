@model UpdateUserDto
@{
    ViewData["Title"] = "UpdateRole";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="col-xl-8 order-xl-1">
    <div class="card">
        <div class="card-header">
            <div class="row align-items-center">
                <div class="col-12">
                    <h3 class="mb-0">Rol Ekleme Saylası </h3>
                </div>
            </div>
        </div>
        <div class="card-body">
            <form method="post">
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <label>Kullanıcı Adı</label>
                    <span asp-validation-for="UserName" class="text-danger"></span>
                    <input type="text" asp-for="UserName" style="color:black" disabled class="form-control form-control-lg">
                </div>
                <div class="form-group">
                    <label>E-mail Adresi</label>
                    <span asp-validation-for="Mail" class="text-danger"></span>
                    <input type="email" asp-for="Mail" style="color:black" disabled class="form-control form-control-lg">
                </div>
                <div class="form-group">
                    <label>Roller</label>
                    @foreach (var item in Model.Roles)
                    {
                        <div class="form-check">
                            <input type="checkbox" name="Roles" value="@item" checked="@(Model.UserRoles.Contains(item))" class="form-check-label" />@item
                        </div>
                    }
                </div>
                <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                <a href="/AdminUsers/Index/" class="btn btn-secondary mt-2">Geri Dön</a>
                <button class="btn btn-primary mt-2" type="submit">Kaydet</button>
            </form>
        </div>
    </div>
</div>


