@model CreateUserDto
@{
    ViewData["Title"] = "CreateUser";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
<div class="col-xl-8 order-xl-1">
    <div class="card">
        <div class="card-header">
            <div class="row align-items-center">
                <div class="col-12">
                    <h3 class="mb-0">Yeni Kullanıcı Ekleme Sayfası </h3>
                </div>
            </div>
        </div>
        <div class="card-body">
            <form method="post">
                <div class="form-group">
                    <label>Adınız</label>
                    <span asp-validation-for="Name" class="text-danger"></span>
                    <input type="text" asp-for="Name" class="form-control form-control-lg">
                </div>
                <div class="form-group">
                    <label>Soyadınız</label>
                    <span asp-validation-for="Surname" class="text-danger"></span>
                    <input type="text" asp-for="Surname" class="form-control form-control-lg">
                </div>
                <div class="form-group">
                    <label>Kullanıcı Adınız</label>
                    <span asp-validation-for="UserName" class="text-danger"></span>
                    <input type="text" asp-for="UserName" class="form-control form-control-lg">
                </div>
                <div class="form-group">
                    <label>E-mail Adresiniz</label>
                    <span asp-validation-for="Mail" class="text-danger"></span>
                    <input type="email" asp-for="Mail" class="form-control form-control-lg">
                </div>
                <div class="form-group">
                    <label>Şifreniz</label>
                    <span asp-validation-for="Password" class="text-danger"></span>
                    <input type="password" asp-for="Password" class="form-control form-control-lg">
                </div>
                <div class="form-group">
                    <label>Şifreniz Tekrar</label>
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    <input type="password" asp-for="ConfirmPassword" class="form-control form-control-lg">
                </div>
                <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                @if (ViewBag.Error is not null)
                {
                    <div class="text-danger">@ViewBag.Error</div>
                }
                <a href="/AdminUsers/Index/" class="btn btn-secondary mt-2">Geri Dön</a>
                <button class="btn btn-primary mt-2" type="submit">Kaydet</button>
            </form>
        </div>
    </div>
</div>

