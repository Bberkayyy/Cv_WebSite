@model CreateExperineceDto
@{
    ViewData["Title"] = "CreateExperiance";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
<div class="col-xl-8 order-xl-1">
    <div class="card">
        <div class="card-header">
            <div class="row align-items-center">
                <div class="col-12">
                    <h3 class="mb-0">Yeni Deneyim Ekleme Sayfası </h3>
                </div>
            </div>
        </div>
        <div class="card-body">
            <form method="post">
                <div class="pl-lg-4">
                    <div class="row">
                        <div class="col-xl-12">
                            <div class="form-group">
                                <label class="form-control-label" for="input-CompanyName">Şirket Adı</label>
                                <input class="form-control" type="text" id="input-CompanyName" asp-for="CompanyName" placeholder="Şirket adı giriniz.">
                            </div> 
                            <div class="form-group">
                                <label class="form-control-label" for="input-TaskName">Pozisyon Adı</label>
                                <input class="form-control" type="text" id="input-TaskName" asp-for="TaskName" placeholder="Pozisyon adı giriniz.">
                            </div>
                            <div class="form-group">
                                <label class="form-control-label" for="input-Date">Tarih</label>
                                <input class="form-control" type="text" id="input-Date" asp-for="Date" placeholder="Tarih aralığı giriniz.">
                            </div>
                            <div class="form-group">
                                <label class="form-control-label" for="input-Description">Açıklama</label>
                                <textarea style="resize:none;" cols="20" rows="5" class="form-control" asp-for="Description" placeholder="Açıklama giriniz."></textarea>
                            </div>
                        </div>
                    </div>
                </div>
                <a href="/AdminExperience/Index/" class="btn btn-secondary mt-2">Geri Dön</a>
                <button class="btn btn-primary mt-2" type="submit">Kaydet</button>
            </form>
        </div>
    </div>
</div>