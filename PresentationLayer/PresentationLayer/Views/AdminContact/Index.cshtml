@model List<ResultContactDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
@if (Model.Count() > 0)
{
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">İletişim Kanalları Tablosu</h4>
                    <p class="card-subtitle mb-4">
                        # Tema bütünlüğünnü bozulmaması adına 1 adet iletişim kanalı bilgisi bulunmalıdır.
                    </p>
                    <div class="table-responsive">
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th scope="col" class="sort" data-sort="budget">Başlık</th>
                                    <th scope="col" class="sort" data-sort="status">Açıklama</th>
                                    <th scope="col" class="sort" data-sort="status">Mail</th>
                                    <th scope="col" class="sort" data-sort="status">Telefon</th>
                                    <th scope="col">Sil</th>
                                    <th scope="col" class="sort" data-sort="completion">Güncelle</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.Title</td>
                                        <td>@item.Description</td>
                                        <td>@item.Mail</td>
                                        <td>@item.Phone</td>
                                        <td><a href="/AdminContact/RemoveContact/@item.Id" class="btn btn-outline-danger">Sil</a></td>
                                        <td><a href="/AdminContact/UpdateContact/@item.Id" class="btn btn-outline-info">Güncelle</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <p class="bg-danger text-white p-4 text-center card-body table-responsive">İletişim Kanalı bilgisi bulunamadı. İletişim Kanalı bilgisi eklemek için "Yeni İletişim Kanalı Ekle" butonuna tıklayınız.</p>
    <a href="/AdminContact/CreateContact" class="btn btn-outline-primary">Yeni İletişim Kanalı Ekle</a>
}
