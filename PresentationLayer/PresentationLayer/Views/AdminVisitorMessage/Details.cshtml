@model ResultAdminVisitorMessageDto
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
<div class="col-xl-8 order-xl-1">
    <div class="card">
        <div class="card-header">
            <div class="row align-items-center">
                <div class="col-12">
                    <h3 class="mb-0">Mesaj Detayı</h3>
                </div>
            </div>
        </div>
        <div class="card-body">
            <form>
                <input type="hidden" asp-for="Id" />
                <div class="pl-lg-4">
                    <div class="row">
                        <div class="col-xl-12">
                            <div class="form-group">
                                <label class="form-control-label" for="input-Başlık">Konu</label>
                                <input class="form-control text-success" disabled type="text" id="input-Başlık" asp-for="Subject">
                            </div>
                            <div class="form-group">
                                <label class="form-control-label" for="input-SendDate">Gönderme Tarihi</label>
                                <input class="form-control text-success" disabled type="date" id="input-SendDate" asp-for="SendDate">
                            </div>
                            <div class="form-group">
                                <label class="form-control-label" for="input-SenderName">Gönderen Adı</label>
                                <input class="form-control text-success" disabled type="text" id="input-SenderName" asp-for="SenderName">
                            </div>
                            <div class="form-group">
                                <label class="form-control-label" for="input-ReceiverName">Alıcı Adı</label>
                                <input class="form-control text-success" disabled type="text" id="input-ReceiverName" asp-for="ReceiverName">
                            </div>
                            <div class="form-group">
                                <label class="form-control-label" for="input-MessageContent">Mesaj</label>
                                <textarea rows="10" class="form-control text-success" disabled type="text" id="input-MessageContent" asp-for="MessageContent"></textarea>
                            </div>
                        </div>
                    </div>
                </div>
                <a href="/AdminVisitorMessage/Inbox" class="btn btn-warning mt-2">Gelen Mesajlar</a>
                <a href="/AdminVisitorMessage/Sendbox" class="btn btn-info mt-2">Giden Mesajlar</a>
            </form>
        </div>
    </div>
</div>



