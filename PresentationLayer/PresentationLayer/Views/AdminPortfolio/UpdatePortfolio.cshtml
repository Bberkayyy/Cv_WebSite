@model UpdatePortfolioDto
@{
    ViewData["Title"] = "UpdatePortfolio";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="col-xl-8 order-xl-1">
    <div class="card">
        <div class="card-header">
            <div class="row align-items-center">
                <div class="col-12">
                    <h3 class="mb-0">Yeni Proje Ekleme Sayfası </h3>
                </div>
            </div>
        </div>
        <div class="card-body">
            <form method="post">
                <input type="hidden" asp-for="Id" />
                <div class="pl-lg-4">
                    <div class="row">
                        <div class="col-xl-12">
                            <div class="form-group">
                                <label class="form-control-label" for="input-ProjectName">Proje Adı</label>
                                <input class="form-control" type="text" id="input-ProjectName" asp-for="ProjectName" placeholder="Proje adı giriniz.">
                            </div>
                            <div class="form-group">
                                <label class="form-control-label" for="input-ProjectUrl">Proje Linki</label>
                                <input class="form-control" type="text" id="input-ProjectUrl" asp-for="ProjectUrl" placeholder="Proje linki giriniz.">
                            </div>
                            <div class="form-group">
                                <label class="form-control-label" for="input-ProjectImageUrl">Proje Resim Url 1</label>
                                <input class="form-control" type="text" id="input-ProjectImageUrl" asp-for="ProjectImageUrl" placeholder="Proje resim linki giriniz.">
                            </div>
                            <div class="form-group">
                                <label class="form-control-label" for="input-ProjectBigImageUrl">Proje Resim Url 2</label>
                                <input class="form-control" type="text" id="input-ProjectBigImageUrl" asp-for="ProjectBigImageUrl" placeholder="Proje resim linki giriniz.">
                            </div>
                        </div>
                    </div>
                </div>
                <a href="/AdminPortfolio/Index" class="btn btn-secondary mt-2">Geri Dön</a>
                <button class="btn btn-primary mt-2" type="submit">Güncelle</button>
            </form>
        </div>
    </div>
</div>



