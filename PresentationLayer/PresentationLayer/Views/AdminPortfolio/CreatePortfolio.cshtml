@model CreatePortfolioDto
@{
    ViewData["Title"] = "CreatePortfolio";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
<div class="col-xl-8 order-xl-1">
    <div class="card">
        <div class="card-header">
            <div class="row align-items-center">
                <div class="col-12">
                    <h3 class="mb-0">Yeni Proje Ekleme Sayfası </h3>
                </div>
            </div>
        </div>
        <div class="card-body">
            <form method="post" enctype="multipart/form-data">
                <div class="pl-lg-4">
                    <div class="row">
                        <div class="col-xl-12">
                            <div class="form-group">
                                <label class="form-control-label" for="input-ProjectName">Proje Adı</label>
                                <input class="form-control" type="text" id="input-ProjectName" asp-for="ProjectName" placeholder="Proje adı giriniz.">
                            </div>
                            <div class="form-group">
                                <label class="form-control-label" for="input-ProjectUrl">Proje Linki</label>
                                <input class="form-control" type="text" id="input-ProjectUrl" asp-for="ProjectUrl" placeholder="Proje linki giriniz.">
                            </div>
                            <div class="form-group">
                                <label class="form-control-label" for="input-Picture">Projenin Fotoğrafını Ekleyiniz</label>
                                <br />
                                <input type="file" asp-for="Picture" />
                                @if (TempData["UnsuccessMessage"] is not null)
                                {
                                    <div class="alert alert-danger">
                                        <strong>@TempData["UnsuccessMessage"]</strong>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
                <a href="/AdminPortfolio/Index/" class="btn btn-secondary mt-2">Geri Dön</a>
                <button class="btn btn-primary mt-2" type="submit">Kaydet</button>
            </form>
        </div>
    </div>
</div>

