@model List<ResultPortfolioDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

@if (Model.Count() > 0)
{
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Projelerim Tablosu</h4>
                    <div class="table-responsive">
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th scope="col" class="sort" data-sort="name">Platform - Proje Adı</th>
                                    <th scope="col" class="sort" data-sort="status">Proje Linki</th>
                                    <th scope="col" class="sort" data-sort="status">Proje Resim Url 1</th>
                                    <th scope="col" class="sort" data-sort="status">Proje Resim Url 2</th>
                                    <th scope="col">Sil</th>
                                    <th scope="col" class="sort" data-sort="completion">Güncelle</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <th>
                                            <div class="media align-items-center">
                                                <img src="@item.Platform" class="avatar rounded-circle mr-3" />
                                                <div class="media-boy">
                                                    <span class="name mb-0 text-sm">@item.ProjectName</span>
                                                </div>
                                            </div>
                                        </th>
                                        <td>@item.ProjectUrl</td>
                                        <td>@item.ProjectImageUrl</td>
                                        <td>@item.ProjectBigImageUrl</td>
                                        <td><a href="/AdminPortfolio/RemovePortfolio/@item.Id" class="btn btn-outline-danger">Sil</a></td>
                                        <td><a href="/AdminPortfolio/UpdatePortfolio/@item.Id" class="btn btn-outline-info">Güncelle</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <a href="/AdminPortfolio/CreatePortfolio" class="btn btn-outline-primary">Yeni Proje Ekle</a>
        </div>
    </div>



}
else
{
    <p class="bg-danger text-white p-4 text-center card-body table-responsive">Proje bilgisi bulunamadı. Proje eklemek için "Yeni Proje Ekle" butonuna tıklayınız.</p>
    <a href="/AdminPortfolio/CreatePortfolio" class="btn btn-outline-primary">Yeni Proje Ekle</a>
}



