@model MessageDetailDto
@{
    ViewData["Title"] = "MessageDetail";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="col-xl-8 order-xl-1">
    <div class="card">
        <div class="card-header">
            <div class="row align-items-center">
                <div class="col-12">
                    <h3 class="mb-0">Gelen Mesaj Detayı</h3>
                </div>
            </div>
        </div>
        <div class="card-body">
            <form>
                <input type="hidden" asp-for="Id" />
                <div class="pl-lg-4">
                    <div class="row">
                        <div class="col-xl-12">
                            <div class="form-group">
                                <label class="form-control-label" for="input-Name">Gönderen</label>
                                <input class="form-control text-success" disabled type="text" id="input-Name" asp-for="Name">
                            </div>
                            <div class="form-group">
                                <label class="form-control-label" for="input-Date">Gönderme Tarihi</label>
                                <input class="form-control text-success" disabled type="text" id="input-Date" asp-for="Date">
                            </div>
                            <div class="form-group">
                                <label class="form-control-label" for="input-Mail">Gönderen Mail</label>
                                <input class="form-control text-success" disabled type="text" id="input-Mail" asp-for="Mail">
                            </div>
                            <div class="form-group">
                                <label class="form-control-label" for="input-Mesaj">Mesaj</label>
                                <textarea rows="10" class="form-control text-success" disabled type="text" id="input-Mesaj" asp-for="Content"></textarea>
                            </div>
                        </div>
                    </div>
                </div>
                <a href="/AdminMessage/Index/" class="btn btn-secondary mt-2">Geri Dön</a>
            </form>
        </div>
    </div>
</div>

