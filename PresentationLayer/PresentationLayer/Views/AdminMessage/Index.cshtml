@model List<ResultMessageDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

@if (Model.Count() > 0)
{
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Siteden Gelen Mesajlar</h4>
                    <div class="table-responsive">
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th scope="col" class="sort" data-sort="budget">#</th>
                                    <th scope="col" class="sort" data-sort="status">Gönderen Adı</th>
                                    <th scope="col" class="sort" data-sort="status">Gönderen Mail</th>
                                    <th scope="col" class="sort" data-sort="status">Mesaj</th>
                                    <th scope="col" class="sort" data-sort="status">Tarih</th>
                                    <th scope="col" class="sort" data-sort="status">Durum</th>
                                    <th scope="col">Sil</th>
                                    <th scope="col">*********Okundu Olarak İşaretle***********</th>
                                    <th scope="col" class="sort" data-sort="completion">Mesaja Git</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    count++;
                                    <tr>
                                        <td>@count</td>
                                        <td>@item.Name</td>
                                        <td>@item.Mail</td>
                                        <td>@item.Content</td>
                                        <td>@item.Date.ToShortDateString()</td>
                                        <td>@item.Status</td>
                                        <td><a href="/AdminMessage/RemoveMessage/@item.Id" class="btn btn-outline-danger">Sil</a></td>
                                        <td><a href="/AdminMessage/MessageStatus/@item.Id" class="btn btn-outline-info">Okundu Olarak İşaretle</a></td>
                                        <td><a href="/AdminMessage/MessageDetail/@item.Id" class="btn btn-outline-warning">Mesaja Git</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <p class="bg-danger text-white p-4 text-center card-body table-responsive">Herhangi bir mesajınız bulunmamaktadır.</p>
}


