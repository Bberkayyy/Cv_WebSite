@model CreateAboutDto
@{
    ViewData["Title"] = "CreateAbout";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
<div class="col-xl-8 order-xl-1">
    <div class="card">
        <div class="card-header">
            <div class="row align-items-center">
                <div class="col-12">
                    <h3 class="mb-0">Hakkımda Ekleme Sayfası </h3>
                </div>
            </div>
        </div>
        <div class="card-body">
            <form method="post">
                <div class="pl-lg-4">
                    <div class="row">
                        <div class="col-xl-12">
                            <div class="form-group">
                                <label class="form-control-label" for="input-Title">Başlık</label>
                                <input class="form-control" type="text" id="input-Title" asp-for="Title" placeholder="Başlık giriniz.">
                            </div>
                            <div class="form-group">
                                <label class="form-control-label" for="input-Age">Yaş</label>
                                <input class="form-control" type="text" id="input-Age" asp-for="Age" placeholder="Yaş bilgisi giriniz.">
                            </div>
                            <div class="form-group">
                                <label class="form-control-label" for="input-Mail">Email</label>
                                <input class="form-control" type="text" id="input-Mail" asp-for="Mail" placeholder="Email adresi giriniz.">
                            </div>
                            <div class="form-group">
                                <label class="form-control-label" for="input-Phone">Telefon</label>
                                <input class="form-control" type="text" id="input-Phone" asp-for="Phone" placeholder="Telefon numarası giriniz.">
                            </div>
                            <div class="form-group">
                                <label class="form-control-label" for="input-Address">Adres</label>
                                <textarea class="form-control" style="resize:none;" cols="10" rows="3" asp-for="Address" placeholder="Adres giriniz."></textarea>
                            </div>
                            <div class="form-group">
                                <label class="form-control-label" for="input-ImageUrl">Resim Linki</label>
                                <input class="form-control" type="text" id="input-ImageUrl" asp-for="ImageUrl" placeholder="Resim linki giriniz.">
                            </div>
                            <div class="form-group">
                                <label class="form-control-label" for="input-Description">Açıklama</label>
                                <textarea class="form-control" style="resize:none;" cols="20" rows="5" asp-for="Description" placeholder="Açıklama giriniz."></textarea>

                            </div>
                        </div>
                    </div>
                </div>
                <a href="/AdminAbout/Index" class="btn btn-secondary mt-2">Geri Dön</a>
                <button class="btn btn-primary mt-2" type="submit">Kaydet</button>
            </form>
        </div>
    </div>
</div>


