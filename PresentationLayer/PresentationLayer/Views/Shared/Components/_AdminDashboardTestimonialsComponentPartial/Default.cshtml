@model List<ResultTestimonialDto>
<div class="row ">
    <div class="col-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Referanslar</h4>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th> Referans Adı </th>
                                <th> Çalıştığı Şirket </th>
                                <th> Pozisyon </th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                if (item.Showcase)
                                {
                                    <tr>
                                        <td>
                                            <img src="@item.ImageUrl" alt="image" />
                                            <span class="pl-2">@item.ClientName</span>
                                        </td>
                                        <td> @item.Company </td>
                                        <td> @item.Title </td>
                                    </tr>
                                }
                                else
                                {
                                    <tr>
                                        <td>
                                            <img src="@item.ImageUrl" alt="image" />
                                            <span style="color:green" class="pl-2">@item.ClientName</span>
                                        </td>
                                        <td style="color:green"> @item.Company </td>
                                        <td style="color:green"> @item.Title </td>
                                    </tr>

                                }

                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>