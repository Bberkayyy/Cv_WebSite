@model List<ResultToDoListDto>
<div class="dropdown-menu dropdown-menu-right navbar-dropdown preview-list" aria-labelledby="notificationDropdown">
    <h6 class="p-3 mb-0">Yapılacaklar Listesi</h6>
    @foreach (var item in Model)
    {
        @if (item.Status)
        {
            <div class="dropdown-divider"></div>
            <a class="dropdown-item preview-item">
                <div class="preview-thumbnail">
                    <div class="preview-icon bg-dark rounded-circle">
                        <i class="mdi mdi-check-all text-success"></i>
                    </div>
                </div>
                <div class="preview-item-content">
                    <p class="preview-subject mb-1">Yapıldı.</p>
                    <p class="text-muted ellipsis mb-0">@item.Content</p>
                </div>
            </a>
        }
        else
        {
            <div class="dropdown-divider"></div>
            <a class="dropdown-item preview-item">
                <div class="preview-thumbnail">
                    <div class="preview-icon bg-dark rounded-circle">
                        <i class="mdi mdi-close text-warning"></i>
                    </div>
                </div>
                <div class="preview-item-content">
                    <p class="preview-subject mb-1">Yapılacak.</p>
                    <p class="text-muted ellipsis mb-0">@item.Content</p>
                </div>
            </a>
        }
    }
    <p class="p-3 mb-0 text-center"><a href="/AdminDashboard/Index/">Listeye Git</a></p>
</div>