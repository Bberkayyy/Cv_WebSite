@model CreateServiceDto
@{
    ViewData["Title"] = "CreateService";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="col-xl-8 order-xl-1">
    <div class="card">
        <div class="card-header">
            <div class="row align-items-center">
                <div class="col-12">
                    <h3 class="mb-0">Yeni Hizmet Ekleme Sayfası </h3>
                </div>
            </div>
        </div>
        <div class="card-body">
            <form method="post">
                <div class="pl-lg-4">
                    <div class="row">
                        <div class="col-xl-12">
                            <div class="form-group">
                                <label class="form-control-label" for="input-Title">Hizmet Adı</label>
                                <input class="form-control" type="text" id="input-Title" asp-for="Title" placeholder="Hizmet adı giriniz.">
                            </div>
                            <div class="form-group">
                                <label class="form-control-label" for="input-ImageUrl">Resim Linki</label>
                                <input class="form-control" type="text" id="input-ImageUrl" asp-for="ImageUrl" placeholder="Resim linki giriniz.">
                            </div>
                        </div>
                    </div>
                </div>
                <a href="/AdminService/Index/" class="btn btn-secondary mt-2">Geri Dön</a>
                <button class="btn btn-primary mt-2" type="submit">Kaydet</button>
            </form>
        </div>
    </div>
</div>



