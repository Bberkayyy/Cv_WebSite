@model List<ResultServiceDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}
@if (Model.Count() > 0)
{
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Hizmetlerim Tablosu</h4>
                    <div class="table-responsive">
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th scope="col" class="sort" data-sort="name">#</th>
                                    <th scope="col" class="sort" data-sort="budget">Hizmet Adı</th>
                                    <th scope="col" class="sort" data-sort="budget">Resim</th>
                                    <th scope="col">Sil</th>
                                    <th scope="col" class="sort" data-sort="completion">Güncelle</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <th>@count</th>
                                        <td>@item.Title</td>
                                        <td>@item.ImageUrl</td>
                                        <td><a href="/AdminService/RemoveService/@item.Id" class="btn btn-outline-danger">Sil</a></td>
                                        <td><a href="/AdminService/UpdateService/@item.Id" class="btn btn-outline-info">Güncelle</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <a href="/AdminService/CreateService" class="btn btn-outline-primary">Yeni Hizmet Ekle</a>
        </div>
    </div>
}
else
{
    <p class="bg-danger text-white p-4 text-center card-body table-responsive">Hizmet bilgisi bulunamadı. Hizmet bilgisi eklemek için "Yeni Hizmet Ekle" butonuna tıklayınız.</p>
    <a href="/AdminService/CreateService" class="btn btn-outline-primary">Yeni Hizmet Ekle</a>
}




