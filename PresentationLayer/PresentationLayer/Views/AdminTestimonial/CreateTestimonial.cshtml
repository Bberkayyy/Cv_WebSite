@model CreateTestimonialDto
@{
    ViewData["Title"] = "CreateTestimonial";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
<div class="col-xl-8 order-xl-1">
    <div class="card">
        <div class="card-header">
            <div class="row align-items-center">
                <div class="col-12">
                    <h3 class="mb-0">Yeni Referans Ekleme Sayfası </h3>
                </div>
            </div>
        </div>
        <div class="card-body">
            <form method="post">
                <div class="pl-lg-4">
                    <div class="row">
                        <div class="col-xl-12">
                            <div class="form-group">
                                <label class="form-control-label" for="input-ClientName">Referans Adı</label>
                                <input class="form-control" type="text" id="input-ClientName" asp-for="ClientName" placeholder="Referans adı giriniz.">
                            </div>
                            <div class="form-group">
                                <label class="form-control-label" for="input-Company">Çalıştığı Şirket</label>
                                <input class="form-control" type="text" id="input-Company" asp-for="Company" placeholder="Çalıştığı şirketi giriniz">
                            </div>
                            <div class="form-group">
                                <label class="form-control-label" for="input-Title">Çalıştığı Pozisyon</label>
                                <input class="form-control" type="text" id="input-Title" asp-for="Title" placeholder="Çalıştığı pozisyonu giriniz.">
                            </div>                      
                            <div class="form-group">
                                <label class="form-control-label" for="input-ImageUrl">Resim Url</label>
                                <input class="form-control" type="text" id="input-ImageUrl" asp-for="ImageUrl" placeholder="Resim url giriniz.">
                            </div>
                            <div class="form-group">
                                <label class="form-control-label" for="input-Comment">Yorum</label>
                                <textarea rows="10" class="form-control" type="text" id="input-Comment" asp-for="Comment" placeholder="Yorumunuzu giriniz."></textarea>
                            </div>
                        </div>
                    </div>
                </div>
                <a href="/AdminTestimonial/Index/" class="btn btn-secondary mt-2">Geri Dön</a>
                <button class="btn btn-primary mt-2" type="submit">Kaydet</button>
            </form>
        </div>
    </div>
</div>