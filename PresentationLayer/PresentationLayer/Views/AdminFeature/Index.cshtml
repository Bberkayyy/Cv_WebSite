@model List<ResultFeatureDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
<div class="card-header border-0">
    <h3 class="mb-0">Ana Sayfa Veri Tablosu</h3>
    <br />
    <h5>
        # Tema bütünlüğünnü bozulmaması adına 1 adet veri bulunmalıdır.
    </h5>
</div>
@if (Model.Count() > 0)
{
    <div class="table-responsive">
        <table class="table align-items-center table-flush">
            <thead class="thead-light">
                <tr>
                    <th scope="col" class="sort" data-sort="budget">Başlık</th>
                    <th scope="col" class="sort" data-sort="status">İsim</th>
                    <th scope="col" class="sort" data-sort="status">Ünvan</th>
                    <th scope="col">Sil</th>
                    <th scope="col" class="sort" data-sort="completion">Güncelle</th>
                </tr>
            </thead>
            <tbody class="list">
                @foreach (var item in Model)
                {
                    <tr>
                        <th>@item.Header</th>
                        <td>@item.Name</td>
                        <td>@item.Title</td>
                        <td><a href="/AdminFeature/RemoveFeature/@item.Id" class="btn btn-outline-danger">Sil</a></td>
                        <td><a href="/AdminFeature/UpdateFeature/@item.Id" class="btn btn-outline-info">Güncelle</a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <p class="bg-danger text-white p-4 text-center card-body table-responsive">Ana Sayfa verisi bulunamadı. Ana Sayfa verisi eklemek için "Yeni Veri Ekle" butonuna tıklayınız.</p>
    <a href="/AdminFeature/CreateFeature" class="btn btn-outline-primary">Yeni Veri Ekle</a>
}




